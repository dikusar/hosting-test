- var pageTitle = "Project Template";
- var pageDescription = "Project Template pageDescription";
- var pageKeywords = "Project Template pageKeywords";
- var pageCopyright = "Project Template pageCopyright";

head
	meta(charset='utf-8')
	meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, minimal-ui')
	meta(http-equiv='X-UA-Compatible' content='IE=edge')
	meta(name='imagetoolbar' content='no')
	meta(name='msthemecompatible' content='no')
	meta(name='cleartype' content='on')
	meta(name='HandheldFriendly' content='True')

	meta(name='format-detection' content='telephone=no')
	meta(name='format-detection' content='address=no')

	meta(name='apple-mobile-web-app-capable' content='yes')
	meta(name='apple-mobile-web-app-status-bar-style' content='black-translucent')

	meta(name='application-name' content=pageTitle)
	meta(name='msapplication-tooltip' content=pageDescription || page.description)

	block head
	title= pageTitle
	meta(name='description' content=pageDescription || page.description)
	meta(name='keywords' content=pageKeywords || page.keywords)
	meta(name='copyright' content=pageCopyright || page.copyright)

	link(href='https://fonts.googleapis.com/css?family=Cuprum:400,700&subset=latin,cyrillic' rel='stylesheet')
	link(href='assets/styles/common.css?')
